{% extends 'base.html.twig' %}

{% block title %}Mes favoris{% endblock %}

{% block body %}
    
 
    <div class="example-wrapper">
        <div class="container">
        <h2 class="mx-auto">Les hackathons dont vous êtes inscrits</h2>
            {% for favoris in lesFavoris %}            
                <!-- Envelopper toute la carte dans un lien <a> pour la rendre cliquable -->
                <div class="card">
                    <div class="card-details">
                        <p class="text-title">{{ favoris.themeHack }}</p>
                        <p class="text-title"> Date: {{ favoris.dateDebutHack|date('d/m/Y') }}</p>
                    </div>
                </div>
         
            {% endfor %}
            
        </div>
    </div>










 














    <style>
        /* Global Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #f7f7f7; /* Fond clair */
            
        }

        /* Conteneur général avec des marges */
        .example-wrapper {
            margin: 2em auto;
            max-width: 1200px;
            width: 95%;
        }

        /* Conteneur de cartes avec CSS Grid */
        .container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); /* Colonnes adaptatives */
            gap: 30px; /* Espace entre les cartes */
            justify-items: center; /* Centrer les cartes */
            margin-top: 20px;
        }

        /* Styles des cartes */
        .card {
            width: 100%; /* La carte prend toute la largeur de sa colonne */
            height: 300px;
            background: #ffffff;
            border-radius: 15px;
            border: 2px solid #e0e0e0;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
            text-decoration: none; /* Enlever la décoration par défaut du lien */
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .card-details {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            height: 100%;
        }

        .card-details p {
            font-size: 1.2rem;
            font-weight: bold;
            color: #333;
            text-align: center;
        }

        .card-details .text-title {
            font-size: 1.5rem;
            color: #4a90e2;
            margin-bottom: 10px;
        }

        /* Style du bouton */
        .btn-link {
            display: inline-block;
            padding: 10px 20px;
            margin-bottom : 10px;
            background-color: #4a90e2;
            color: white;
            font-size: 1rem;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-link:hover {
            background-color: #357ab7;
            transform: scale(1.05);
        }

        /* Responsiveness : ajuster la disposition pour les petits écrans */
        @media (max-width: 768px) {
            .container {
                grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); /* 2-3 cartes par ligne selon la taille de l'écran */
            }

            .card {
                height: 270px;
            }
        }

        @media (max-width: 480px) {
            .container {
                grid-template-columns: 1fr; /* 1 carte par ligne sur les très petits écrans */
            }

            .card {
                height: auto;
            }
        }
    </style>
{% endblock %}