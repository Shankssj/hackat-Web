{% extends 'base.html.twig' %}

{% block title %}Liste des Hackathons{% endblock %}

{% block body %}
    <style>
        /* Global Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f4f5f7;
            padding: 30px;
            color: #333;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #4a90e2;
            font-size: 2.5rem;
        }

        /* Conteneur principal */
        .example-wrapper {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        /* Titres de section */
        .section-title {
            font-size: 1.8rem;
            color: #555;
            margin: 20px 0 10px;
            border-bottom: 2px solid #4a90e2;
            padding-bottom: 5px;
        }

        /* Grid Container */
        .container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 10px;
        }

        /* Card Styles */
        .card {
            background-color: #ffffff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            text-decoration: none;
            color: inherit;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        .card-details {
            padding: 20px;
            text-align: center;
        }

        .card-details p {
            margin: 10px 0;
            color: #555;
        }

        .card-details .text-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #4a90e2;
            margin-bottom: 5px;
        }

        .card-footer {
            background-color: #f4f5f7;
            padding: 10px 20px;
            text-align: center;
            font-size: 0.9rem;
            color: #777;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .container {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            }
        }

        @media (max-width: 480px) {
            h1 {
                font-size: 2rem;
            }

            .section-title {
                font-size: 1.5rem;
            }
        }
    </style>

    <div class="example-wrapper">
        <h1>Liste des Hackathons</h1>

        <div class="section-title">Hackathons Ã  venir</div>
        <div class="container">
            {% for hackaton in lesHackaton %}
                <a href="{{ path('app_details', {id: hackaton.id}) }}" class="card">
                    <div class="card-details">
                        <p class="text-title">{{ hackaton.themeHack }}</p>
                        <p>Date: {{ hackaton.dateDebutHack|date('d/m/Y') }}</p>
                    </div>
                    <div class="card-footer">
                        Cliquez pour en savoir plus
                    </div>
                </a>
            {% else %}
                <p>Aucun hackathon &agrave; venir pour le moment.</p>
            {% endfor %}
        </div>

        <div class="section-title">Hackathons pass&eacute;s</div>
        <div class="container">
            {% for hackatons in lesHackAncien %}
                <a href="{{ path('app_details', {id: hackatons.id}) }}" class="card">
                    <div class="card-details">
                        <p class="text-title">{{ hackatons.themeHack }}</p>
                        <p>Date: {{ hackatons.dateDebutHack|date('d/m/Y') }}</p>
                    </div>
                    <div class="card-footer">
                        Cliquez pour voir les d&eacute;tails
                    </div>
                </a>
            {% else %}
                <p>Aucun hackathon pass&eacute; trouv&eacute;.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}