{% extends 'base.html.twig' %}

{% block title %}Détails de l'Hackathon{% endblock %}

{% block body %}
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Arial', sans-serif;
    }

    body {
        background-color: #f7f7f7;
        padding: 40px;
    }

    .example-wrapper {
        margin: 2em auto;
        max-width: 1200px;
        width: 95%;
    }

    .container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 40px;
        justify-items: center;
        margin-top: 20px;
    }

    .card {
        width: 100%;
        background: #ffffff;
        border-radius: 15px;
        border: 2px solid #e0e0e0;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
        text-decoration: none;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card-details {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-start;
    }

    .card-details .text-title {
        font-size: 1.8rem;
        color: #4a90e2;
        margin-bottom: 15px;
    }

    .card-details p, .card-details h3 {
        font-size: 1.4rem;
        color: #333;
        margin-bottom: 15px;
        line-height: 1.5;
    }

    .card-details ul {
        list-style-type: disc;
        padding-left: 20px;
        margin-bottom: 20px;
    }

    .card-details ul li {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 5px;
    }

    @media (max-width: 768px) {
        .container {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        }

        .card {
            height: auto;
        }
    }

    @media (max-width: 480px) {
        .container {
            grid-template-columns: 1fr;
        }

        .card {
            height: auto;
        }
    }
</style>

<div class="example-wrapper">
    <div class="container">
        <!-- Carte principale : Hackathon -->
        <div class="card">
            <div class="card-details">
                <p class="text-title">{{ leDetails.themeHack }}</p>

                <h3>Adresse :</h3>
                <p>{{ leDetails.rueHack }}, {{ leDetails.cpHack }}, {{ leDetails.villeHack }}</p>

                <h3>Heure de début :</h3>
                <p>{{ leDetails.heureDebutHack | date('H:i') }}h</p>

                <h3>Date limite d'inscription :</h3>
                <p>{{ leDetails.dateLimiteHack|date('d/m/Y') }}</p>

                <h3>Heure de fin :</h3>
                <p>{{ leDetails.heureFinHack | date('H:i') }}h</p>
            </div>
        </div>

        <!-- Cartes pour chaque coach -->
        {% for coach in coachsHackaton %}
            <div class="card">
                <div class="card-details">
                    <p class="text-title">{{ coach.nomCoach }}</p>

                    {% if coach.lesCompetencesTechniques is defined and coach.lesCompetencesTechniques is not empty %}
                        <h3>Compétences de ce coach technique :</h3>
                        <ul>
                            {% for uneCompetenceTech in coach.lesCompetencesTechniques %}
                                <li>{{ uneCompetenceTech.libelleTechnique }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    {% if coach.lesCompetencesMetier is defined and coach.lesCompetencesMetier is not empty %}
                        <h3>Compétences de ce coach métier :</h3>
                        <ul>
                            {% for uneCompetenceMetier in coach.lesCompetencesMetier %}
                                <li>{{ uneCompetenceMetier.libelleMetier }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    {% if coach.lesSpecialites is defined and coach.lesSpecialites is not empty %}
                        <h3>Spécialités de ce coach motivant :</h3>
                        <ul>
                            {% for uneSpecialite in coach.lesSpecialites %}
                                <li>{{ uneSpecialite.libelleMotivant }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <p>Aucun coach disponible pour ce hackathon.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
